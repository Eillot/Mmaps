<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="BaseAppTheme">

    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="CustomImageButton" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/btn_borderless_material</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/primary_color</item>
        <item name="tabIndicatorColor">@color/color_accent</item>
        <item name="tabTextColor">#EEEEEE</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabBackground">@drawable/btn_borderless_material</item>
    </style>

    <style name="SelectableCardView" parent="CardView.Light">
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="MaterialIcon">
        <item name="android:alpha">0.6</item>
    </style>

</resources>
