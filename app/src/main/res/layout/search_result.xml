<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_result_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/search_box_height"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/search_choose_on_map"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/card_view_padding"
        android:layout_marginStart="@dimen/card_view_padding"
        android:background="@drawable/card"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_place" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="@string/choose_on_map" />

    </LinearLayout>

    <ListView
        android:id="@+id/result_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/card_view_padding"
        android:layout_marginStart="@dimen/card_view_padding"
        android:background="@drawable/card" />

</LinearLayout>