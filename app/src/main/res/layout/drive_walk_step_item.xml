<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/step_direction_icon"
        style="@style/MaterialIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="12dp" />

    <TextView
        android:id="@+id/step_instruction"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:minHeight="48dp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/step_instruction"
        android:layout_below="@id/step_instruction"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/step_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/grey_background_light" />

    </LinearLayout>

</RelativeLayout>