<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/poi_detail_header"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="bottom">

    <LinearLayout
        android:id="@+id/poi_detail_header2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="28dp"
        android:background="@drawable/panel_background"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/poi_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/poi_type"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="@color/grey" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@id/action_directions"
        android:layout_width="@dimen/fab_d"
        android:layout_height="@dimen/fab_d"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/directions"
        android:src="@drawable/ic_directions"
        app:backgroundTint="@color/primary_color"
        app:elevation="0dp" />

</RelativeLayout>