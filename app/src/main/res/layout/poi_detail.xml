<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="poi"
            type="com.amap.api.services.core.PoiItem" />

        <variable
            name="handler"
            type="android.view.View.OnClickListener" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card">

        <ImageButton
            android:id="@id/action_directions"
            android:layout_width="@dimen/fab_d"
            android:layout_height="@dimen/fab_d"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_btn_background"
            android:backgroundTint="@color/primary_color"
            android:contentDescription="@string/directions"
            android:onClick="@{handler.onClick}"
            android:src="@drawable/ic_directions" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/action_directions"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/poi_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@{poi.title}"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/poi_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{poi.typeDes}"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/poi_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{poi.provinceName+poi.cityName+poi.snippet}"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/poi_tel_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{poi.tel}"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/poi_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{poi.website}"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </RelativeLayout>

</layout>